<?xml version="1.0" encoding="utf-8"?>
<ArrayOfSequence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">

  <!-- OPENED MIRROR -->
  <Sequence>
    <config_type>CONFIG_tiles</config_type>
    <frames>
      <Frame>
        <type>SPRITE</type>
        <name>LOOP</name>
        <value>MirrorC</value>
        <stoppable>true</stoppable>
        <xOffSet>0</xOffSet>
        <yOffSet>0</yOffSet>
      </Frame>
      <Frame>
        <type>COMMAND</type>
        <name>GOTOFRAME</name>
        <parameter>LOOP</parameter>
        <stoppable>false</stoppable>
      </Frame>
    </frames>
    <name>OPENED</name>
    <raised>false</raised>
    <collision>Platform</collision>
  </Sequence>


    <!-- CLOSED MIRROR -->
  <Sequence>
    <config_type>CONFIG_tiles</config_type>
    <frames>
      <Frame>
        <type>SPRITE</type>
        <name>LOOP</name>
        <value>MirrorA</value>
        <stoppable>true</stoppable>
        <xOffSet>0</xOffSet>
        <yOffSet>0</yOffSet>
      </Frame>
      <Frame>
        <type>COMMAND</type>
        <name>GOTOFRAME</name>
        <parameter>LOOP</parameter>
        <stoppable>false</stoppable>
      </Frame>
    </frames>
    <name>CLOSED</name>
    <raised>false</raised>
    <collision>Platform</collision>
  </Sequence>

  <!-- OPEN MIRROR -->
  <Sequence>
    <config_type>CONFIG_tiles</config_type>
    <frames>
      <Frame>
        <type>SPRITE</type>
        <name></name>
        <value>MirrorA</value>
        <stoppable>false</stoppable>
        <sound>mirror</sound>
        <xOffSet>0</xOffSet>
        <yOffSet>0</yOffSet>
      </Frame>
      <Frame>
        <type>SPRITE</type>
        <name></name>
        <value>MirrorB</value>
        <stoppable>false</stoppable>
        <sound>mirror</sound>
        <xOffSet>0</xOffSet>
        <yOffSet>0</yOffSet>
      </Frame>
      <Frame>
        <type>COMMAND</type>
        <name>GOTOSEQUENCE</name>
        <parameter>OPENED</parameter>
        <stoppable>false</stoppable>
      </Frame>
    </frames>
    <name>OPEN</name>
    <raised>false</raised>
    <collision>Platform</collision>
  </Sequence>


  <!-- CLOSE MIRROR -->
  <Sequence>
    <config_type>CONFIG_tiles</config_type>
    <frames>
      <Frame>
        <type>SPRITE</type>
        <name></name>
        <value>MirrorC</value>
        <stoppable>true</stoppable>
        <sound>mirror</sound>
        <xOffSet>0</xOffSet>
        <yOffSet>0</yOffSet>
        <delay>1</delay>
      </Frame>
      <Frame>
      <type>COMMAND</type>
      <name>GOTOSEQUENCE</name>
      <parameter>CLOSED</parameter>
      <stoppable>true</stoppable>
      </Frame>
    </frames>
    <name>CLOSE</name>
    <raised>false</raised>
    <collision>Platform</collision>
  </Sequence>



</ArrayOfSequence>
